#input_form
	= form_for NotificationService.new(:user_id => current_user.id,
                                       :type => "NotifoService"), :remote => true do |f|
		= f.hidden_field :user_id
		= f.hidden_field :type, :value => 'NotifoService'
		#slidefield
			#input_errors
				= render 'shared/error_messages', :object => f.object
			.field
				= f.text_field :username, :id => "input_field"
			.actions
				= f.submit "Add", :class => "submit"
