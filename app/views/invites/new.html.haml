#subscribe
	= form_for(@invite) do |f|
		#input_errors
			= render 'shared/error_messages', :object => f.object
			.field
				= f.text_field :email, 
							   :id => "input_field", 
							   :autocorrect => "off",
							   :autocapitalize => "off"
				= f.submit 'Request Invite', :class => "submit"