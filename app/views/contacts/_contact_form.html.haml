#input_form
	= form_for current_user.contacts.build(:user_id => current_user.id), :remote => true do |f|
		= f.hidden_field :user_id
		#slidefield
			#input_errors
				= render 'shared/error_messages', :object => f.object
			.field
				= f.text_field :email, :id => "input_field"
			.actions
				= f.submit "Add", :class => "submit"
